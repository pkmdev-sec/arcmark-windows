<UserControl x:Class="Arcmark.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Arcmark.ViewModels"
             xmlns:models="clr-namespace:Arcmark.Models"
             xmlns:controls="clr-namespace:Arcmark.Views.Controls"
             Background="#E5E7EB"
             MinWidth="360">

    <UserControl.Resources>
        <!-- Section card style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.06"
                                      BlurRadius="8" ShadowDepth="1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Row label -->
        <Style x:Key="RowLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Divider -->
        <Style x:Key="RowDivider" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <!-- Toggle button style -->
        <Style x:Key="ToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Track"
                                Background="#D1D5DB"
                                CornerRadius="12"
                                Width="44" Height="24">
                            <Ellipse x:Name="Thumb"
                                     Width="20" Height="20"
                                     Fill="White"
                                     HorizontalAlignment="Left"
                                     Margin="2,0,0,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.15"
                                                      BlurRadius="4" ShadowDepth="1"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#9DD0FF"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action button style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Workspace color dot button -->
        <Style x:Key="ColorDotButton" TargetType="Button">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="{TemplateBinding Background}"
                                 Width="22" Height="22">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1"
                                                  BlurRadius="3" ShadowDepth="1"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon button style (rename, delete, move) -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16,16,16,32">

            <!-- â”€â”€ Page title â”€â”€ -->
            <TextBlock Text="Settings"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0,0,0,20"/>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- GENERAL SECTION                           -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <TextBlock Text="GENERAL" Style="{StaticResource SectionHeader}"/>

            <Border Style="{StaticResource SectionCard}">
                <StackPanel>

                    <!-- Always on Top -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Always on Top" Style="{StaticResource RowLabel}"/>
                            <TextBlock Text="Keep Arcmark above all other windows"
                                       FontSize="12" Foreground="#9CA3AF" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton Grid.Column="1"
                                      Style="{StaticResource ToggleStyle}"
                                      IsChecked="{Binding AlwaysOnTopEnabled, Mode=TwoWay}"
                                      Command="{Binding ToggleAlwaysOnTopCommand}"/>
                    </Grid>

                    <Border Style="{StaticResource RowDivider}"/>

                    <!-- Sidebar Attachment -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Attach to Browser Window" Style="{StaticResource RowLabel}"/>
                            <TextBlock Text="Show as sidebar alongside your browser"
                                       FontSize="12" Foreground="#9CA3AF" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton Grid.Column="1"
                                      Style="{StaticResource ToggleStyle}"
                                      IsChecked="{Binding SidebarAttachmentEnabled, Mode=TwoWay}"
                                      Command="{Binding ToggleSidebarAttachmentCommand}"/>
                    </Grid>

                    <Border Style="{StaticResource RowDivider}"/>

                    <!-- Sidebar Position -->
                    <StackPanel>
                        <TextBlock Text="Sidebar Position" Style="{StaticResource RowLabel}"
                                   Margin="0,0,0,10"/>
                        <controls:SidebarPositionSelector
                            x:Name="PositionSelector"
                            SelectedPosition="{Binding SidebarPosition, Mode=TwoWay}"
                            PositionChanged="PositionSelector_PositionChanged"/>
                    </StackPanel>

                    <Border Style="{StaticResource RowDivider}"/>

                    <!-- Default Browser -->
                    <StackPanel>
                        <TextBlock Text="Default Browser" Style="{StaticResource RowLabel}"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableBrowsers}"
                                  SelectedValuePath="Name"
                                  SelectedValue="{Binding SelectedBrowser}"
                                  SelectionChanged="Browser_SelectionChanged"
                                  FontSize="13"
                                  Padding="10,6">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <Border Style="{StaticResource RowDivider}"/>

                    <!-- Global Shortcut -->
                    <StackPanel>
                        <TextBlock Text="Toggle Sidebar Shortcut" Style="{StaticResource RowLabel}"
                                   Margin="0,0,0,8"/>
                        <controls:ShortcutRecorder
                            x:Name="ShortcutRecorder"
                            ShortcutText="{Binding ShortcutDisplay, Mode=TwoWay}"
                            IsRecording="{Binding IsRecordingShortcut, Mode=TwoWay}"
                            ShortcutCaptured="ShortcutRecorder_ShortcutCaptured"
                            ShortcutCleared="ShortcutRecorder_ShortcutCleared"/>
                    </StackPanel>

                </StackPanel>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- WORKSPACES SECTION                        -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <TextBlock Text="WORKSPACES" Style="{StaticResource SectionHeader}"/>

            <Border Style="{StaticResource SectionCard}">
                <StackPanel>

                    <ItemsControl ItemsSource="{Binding Workspaces}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:WorkspaceSettingsViewModel}">
                                <StackPanel Margin="0,0,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Color dot -->
                                        <Ellipse Grid.Column="0"
                                                 Width="14" Height="14"
                                                 Fill="{Binding ColorBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <!-- Name / Rename TextBox -->
                                        <Grid Grid.Column="1" VerticalAlignment="Center">
                                            <!-- Display mode -->
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       Foreground="#111827"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsRenaming,
                                                           Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <!-- Edit mode -->
                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                     FontSize="14"
                                                     BorderThickness="0,0,0,1"
                                                     BorderBrush="#9DD0FF"
                                                     Background="Transparent"
                                                     Padding="0"
                                                     Visibility="{Binding IsRenaming,
                                                         Converter={StaticResource BoolToVisibilityConverter}}"
                                                     x:Name="RenameBox"
                                                     KeyDown="RenameBox_KeyDown"/>
                                        </Grid>

                                        <!-- Action buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <!-- Item count -->
                                            <TextBlock Text="{Binding ItemCount}"
                                                       FontSize="12"
                                                       Foreground="#9CA3AF"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            <!-- Move Up -->
                                            <Button Style="{StaticResource IconButton}"
                                                    Content="â†‘"
                                                    Command="{Binding DataContext.MoveWorkspaceUpCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Move Up"/>
                                            <!-- Move Down -->
                                            <Button Style="{StaticResource IconButton}"
                                                    Content="â†“"
                                                    Command="{Binding DataContext.MoveWorkspaceDownCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Move Down"/>
                                            <!-- Rename -->
                                            <Button Style="{StaticResource IconButton}"
                                                    Content="âœ"
                                                    Command="{Binding DataContext.RenameWorkspaceCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Rename"/>
                                            <!-- Delete -->
                                            <Button Style="{StaticResource IconButton}"
                                                    Content="ðŸ—‘"
                                                    Command="{Binding DataContext.DeleteWorkspaceCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Color picker row (always shown below each workspace) -->
                                    <StackPanel Orientation="Horizontal" Margin="24,6,0,6">
                                        <!-- 8 color swatches -->
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#FFB3BA" Margin="0,0,4,0"
                                                Tag="Blush"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Blush"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#FFCCA1" Margin="0,0,4,0"
                                                Tag="Apricot"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Apricot"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#FFF09D" Margin="0,0,4,0"
                                                Tag="Butter"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Butter"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#B5E59D" Margin="0,0,4,0"
                                                Tag="Leaf"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Leaf"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#9DE8D0" Margin="0,0,4,0"
                                                Tag="Mint"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Mint"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#9DD0FF" Margin="0,0,4,0"
                                                Tag="Sky"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Sky"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#B3B9FF" Margin="0,0,4,0"
                                                Tag="Periwinkle"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Periwinkle"/>
                                        <Button Style="{StaticResource ColorDotButton}"
                                                Background="#D5B3FF"
                                                Tag="Lavender"
                                                Click="ColorSwatch_Click"
                                                DataContext="{Binding}"
                                                ToolTip="Lavender"/>
                                    </StackPanel>

                                    <Border Height="1" Background="#F3F4F6" Margin="0,4,0,4"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- IMPORT SECTION                            -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <TextBlock Text="IMPORT" Style="{StaticResource SectionHeader}"/>

            <Border Style="{StaticResource SectionCard}">
                <StackPanel>

                    <TextBlock Text="Import your existing bookmarks into Arcmark."
                               FontSize="13" Foreground="#6B7280" Margin="0,0,0,14"
                               TextWrapping="Wrap"/>

                    <!-- Import from Chrome -->
                    <Button Style="{StaticResource ActionButton}"
                            Command="{Binding ImportFromChromeCommand}"
                            IsEnabled="{Binding IsChromeAvailable}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒ" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Import from Chrome" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{Binding IsChromeAvailable,
                                    Converter={StaticResource BoolToStringConverter},
                                    ConverterParameter='Chrome bookmarks found|Chrome not detected'}"
                                           FontSize="11" Foreground="#9CA3AF"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- Import from Arc -->
                    <Button Style="{StaticResource ActionButton}"
                            Command="{Binding ImportFromArcCommand}"
                            IsEnabled="{Binding IsArcAvailable}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒˆ" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Import from Arc" FontSize="14" FontWeight="Medium"/>
                                <TextBlock Text="{Binding IsArcAvailable,
                                    Converter={StaticResource BoolToStringConverter},
                                    ConverterParameter='Arc data found|Arc not detected'}"
                                           FontSize="11" Foreground="#9CA3AF"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- Import status -->
                    <Border Background="#F0FDF4" CornerRadius="8" Padding="12,8"
                            Visibility="{Binding ImportStatusMessage,
                                Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ImportStatusMessage}"
                                   FontSize="13" Foreground="#15803D"
                                   TextWrapping="Wrap"/>
                    </Border>

                </StackPanel>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- ABOUT SECTION                             -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <TextBlock Text="ABOUT" Style="{StaticResource SectionHeader}"/>

            <Border Style="{StaticResource SectionCard}">
                <StackPanel>

                    <!-- App identity -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="48" Height="48"
                                Background="#9DD0FF"
                                CornerRadius="12"
                                Margin="0,0,14,0">
                            <TextBlock Text="â—ˆ" FontSize="26"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Arcmark"
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="#111827"/>
                            <TextBlock Text="{Binding AppVersion, StringFormat='Version {0}'}"
                                       FontSize="13" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Check for Updates -->
                    <Button Style="{StaticResource ActionButton}"
                            Command="{Binding CheckForUpdatesCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12">
                        <TextBlock Text="Check for Updates"/>
                    </Button>

                    <Border Style="{StaticResource RowDivider}"/>

                    <!-- GitHub link -->
                    <TextBlock Margin="0,4,0,8">
                        <Hyperlink NavigateUri="https://github.com/arcmark/arcmark-windows"
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            View on GitHub
                        </Hyperlink>
                    </TextBlock>

                    <!-- License -->
                    <TextBlock Text="MIT License Â· Open Source"
                               FontSize="12" Foreground="#9CA3AF"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
