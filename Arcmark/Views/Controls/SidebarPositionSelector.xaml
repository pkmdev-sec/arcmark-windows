<UserControl x:Class="Arcmark.Views.Controls.SidebarPositionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Arcmark.Models">

    <UserControl.Resources>
        <!-- Style for each position button -->
        <Style x:Key="PositionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <!-- Left Position Button -->
        <Button x:Name="LeftButton"
                Style="{StaticResource PositionButtonStyle}"
                Click="LeftButton_Click"
                ToolTip="Sidebar on Left"
                Margin="0,0,8,0">
            <Canvas Width="48" Height="30">
                <!-- Browser window outline -->
                <Rectangle Canvas.Left="2" Canvas.Top="2"
                           Width="44" Height="26"
                           RadiusX="3" RadiusY="3"
                           Stroke="#9CA3AF" StrokeThickness="1.5"
                           Fill="Transparent"/>
                <!-- Title bar -->
                <Rectangle Canvas.Left="2" Canvas.Top="2"
                           Width="44" Height="7"
                           RadiusX="3" RadiusY="3"
                           Fill="#E5E7EB"/>
                <!-- Sidebar panel on LEFT -->
                <Rectangle Canvas.Left="3" Canvas.Top="9"
                           Width="12" Height="18"
                           Fill="#9DD0FF" RadiusX="1" RadiusY="1"/>
                <!-- Content area -->
                <Rectangle Canvas.Left="17" Canvas.Top="9"
                           Width="28" Height="18"
                           Fill="#F9FAFB" RadiusX="1" RadiusY="1"/>
            </Canvas>
        </Button>

        <!-- Right Position Button -->
        <Button x:Name="RightButton"
                Style="{StaticResource PositionButtonStyle}"
                Click="RightButton_Click"
                ToolTip="Sidebar on Right">
            <Canvas Width="48" Height="30">
                <!-- Browser window outline -->
                <Rectangle Canvas.Left="2" Canvas.Top="2"
                           Width="44" Height="26"
                           RadiusX="3" RadiusY="3"
                           Stroke="#9CA3AF" StrokeThickness="1.5"
                           Fill="Transparent"/>
                <!-- Title bar -->
                <Rectangle Canvas.Left="2" Canvas.Top="2"
                           Width="44" Height="7"
                           RadiusX="3" RadiusY="3"
                           Fill="#E5E7EB"/>
                <!-- Content area -->
                <Rectangle Canvas.Left="3" Canvas.Top="9"
                           Width="28" Height="18"
                           Fill="#F9FAFB" RadiusX="1" RadiusY="1"/>
                <!-- Sidebar panel on RIGHT -->
                <Rectangle Canvas.Left="33" Canvas.Top="9"
                           Width="12" Height="18"
                           Fill="#9DD0FF" RadiusX="1" RadiusY="1"/>
            </Canvas>
        </Button>
    </StackPanel>
</UserControl>
