<UserControl x:Class="Arcmark.Views.Controls.PinnedTabsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Arcmark.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="340">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Templates/ThemeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="PinnedTileStyle" TargetType="Button">
                <Setter Property="Background"      Value="#12000000" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Cursor"          Value="Hand" />
                <Setter Property="Padding"         Value="6" />
                <Setter Property="Height"          Value="50" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="TileBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <!-- Favicon -->
                                    <Grid Width="24" Height="24" Margin="0,0,0,4">
                                        <Image Source="{Binding Favicon}"
                                               Width="20" Height="20"
                                               RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Favicon}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="ðŸŒ" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Favicon}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    <!-- Title -->
                                    <TextBlock Text="{Binding Title}"
                                               FontFamily="{StaticResource AppFontFamily}"
                                               FontSize="11"
                                               Foreground="{StaticResource DarkGrayBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               HorizontalAlignment="Center"
                                               MaxWidth="60" />
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="TileBorder" Property="Background">
                                        <Setter.Value><SolidColorBrush Color="#1A000000" /></Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="TileBorder" Property="Background">
                                        <Setter.Value><SolidColorBrush Color="#26000000" /></Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="#0A000000"
            CornerRadius="8"
            Padding="4">
        <ItemsControl ItemsSource="{Binding PinnedLinks, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:LinkViewModel}">
                    <Button Style="{StaticResource PinnedTileStyle}"
                            Margin="2"
                            Tag="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Command="{Binding OpenPinnedLinkCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding Id}">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Unpin"
                                          Click="OnUnpinClicked" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
