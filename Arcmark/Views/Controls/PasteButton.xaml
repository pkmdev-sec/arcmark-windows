<UserControl x:Class="Arcmark.Views.Controls.PasteButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="340">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Templates/ThemeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Two side-by-side action buttons at the bottom of the panel -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- "Add links from clipboard" -->
        <Button Grid.Column="0"
                Height="36"
                Background="#12000000"
                BorderThickness="0"
                Cursor="Hand"
                Command="{Binding PasteLinksCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                WindowChrome.IsHitTestVisibleInChrome="True">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="10,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="+" FontSize="16" FontWeight="Light"
                                       Foreground="{StaticResource DarkGrayBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0" />
                            <TextBlock Text="Add links from clipboard"
                                       FontFamily="{StaticResource AppFontFamily}"
                                       FontSize="13"
                                       Foreground="{StaticResource DarkGrayBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background">
                                <Setter.Value><SolidColorBrush Color="#1A000000" /></Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background">
                                <Setter.Value><SolidColorBrush Color="#26000000" /></Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- "New folder" icon button -->
        <Button Grid.Column="2"
                Width="36" Height="36"
                Background="#12000000"
                BorderThickness="0"
                Cursor="Hand"
                ToolTip="New folder"
                Command="{Binding CreateFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                WindowChrome.IsHitTestVisibleInChrome="True">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                        <TextBlock Text="ðŸ“" FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background">
                                <Setter.Value><SolidColorBrush Color="#1A000000" /></Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background">
                                <Setter.Value><SolidColorBrush Color="#26000000" /></Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
