<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   
    xmlns:conv="clr-namespace:Arcmark.Utilities">

    <!-- ═══════════════════════════════════════════════════════════════
         VALUE CONVERTERS
    ═══════════════════════════════════════════════════════════════ -->
    <conv:BoolToVisibilityConverter         x:Key="BoolToVisibilityConverter"/>
    <conv:InverseBoolToVisibilityConverter  x:Key="InverseBoolToVisibilityConverter"/>
    <conv:BoolToStringConverter             x:Key="BoolToStringConverter"/>
    <conv:StringToVisibilityConverter       x:Key="StringToVisibilityConverter"/>

    <!-- ═══════════════════════════════════════════════════════════════
         COLOR RESOURCES (matching ThemeConstants.cs)
    ═══════════════════════════════════════════════════════════════ -->
    <Color x:Key="DarkGrayColor">#FF141414</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    <Color x:Key="SettingsBackgroundColor">#FFE5E7EB</Color>

    <!-- Overlay / interaction tints -->
    <Color x:Key="HoverOverlayColor">#1AFFFFFF</Color>
    <Color x:Key="PressedOverlayColor">#33FFFFFF</Color>
    <Color x:Key="SubtleOverlayColor">#0F000000</Color>

    <!-- ═══════════════════════════════════════════════════════════════
         BRUSH RESOURCES
    ═══════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="DarkGrayBrush"           Color="{StaticResource DarkGrayColor}" />
    <SolidColorBrush x:Key="WhiteBrush"              Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="SettingsBackgroundBrush" Color="{StaticResource SettingsBackgroundColor}" />
    <SolidColorBrush x:Key="TransparentBrush"        Color="Transparent" />
    <SolidColorBrush x:Key="HoverOverlayBrush"       Color="{StaticResource HoverOverlayColor}" />

    <!-- ═══════════════════════════════════════════════════════════════
         FONT
    ═══════════════════════════════════════════════════════════════ -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="BodyFontSize">14</sys:Double>
    <sys:Double x:Key="SmallFontSize">12</sys:Double>
    <sys:Double x:Key="LargeFontSize">16</sys:Double>

    <!-- ═══════════════════════════════════════════════════════════════
         SPACING THICKNESS RESOURCES
    ═══════════════════════════════════════════════════════════════ -->
    <Thickness x:Key="SpacingTiny">4</Thickness>
    <Thickness x:Key="SpacingSmall">6</Thickness>
    <Thickness x:Key="SpacingMedium">8</Thickness>
    <Thickness x:Key="SpacingRegular">10</Thickness>
    <Thickness x:Key="SpacingLarge">14</Thickness>
    <Thickness x:Key="SpacingExtraLarge">16</Thickness>
    <Thickness x:Key="SpacingHuge">20</Thickness>

    <!-- Row / button padding -->
    <Thickness x:Key="RowPadding">8,0,8,0</Thickness>
    <Thickness x:Key="ButtonPadding">10,6,10,6</Thickness>
    <Thickness x:Key="SearchBarPadding">10,8,10,8</Thickness>

    <!-- ═══════════════════════════════════════════════════════════════
         CORNER RADIUS RESOURCES
    ═══════════════════════════════════════════════════════════════ -->
    <CornerRadius x:Key="CornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">12</CornerRadius>

    <!-- ═══════════════════════════════════════════════════════════════
         SIZING
    ═══════════════════════════════════════════════════════════════ -->
    <sys:Double x:Key="IconSmall">14</sys:Double>
    <sys:Double x:Key="IconMedium">18</sys:Double>
    <sys:Double x:Key="IconLarge">22</sys:Double>
    <sys:Double x:Key="ButtonHeight">32</sys:Double>
    <sys:Double x:Key="RowHeight">44</sys:Double>
    <sys:Double x:Key="PinnedTileHeight">50</sys:Double>

    <!-- ═══════════════════════════════════════════════════════════════
         WORKSPACE COLOR SWATCHES (8 colors)
    ═══════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="WorkspaceBlushBrush"      Color="#FFB3BA" />
    <SolidColorBrush x:Key="WorkspaceApricotBrush"    Color="#FFCCA1" />
    <SolidColorBrush x:Key="WorkspaceButterBrush"     Color="#FFF09D" />
    <SolidColorBrush x:Key="WorkspaceLeafBrush"       Color="#B5E59D" />
    <SolidColorBrush x:Key="WorkspaceMintBrush"       Color="#9DE8D0" />
    <SolidColorBrush x:Key="WorkspaceSkyBrush"        Color="#9DD0FF" />
    <SolidColorBrush x:Key="WorkspacePeriwinkleBrush" Color="#B3B9FF" />
    <SolidColorBrush x:Key="WorkspaceLavenderBrush"   Color="#D5B3FF" />

    <!-- ═══════════════════════════════════════════════════════════════
         WORKSPACE COLOR BUTTON STYLE
         A small round swatch used in the settings color picker.
    ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="WorkspaceColorButtonStyle" TargetType="Button">
        <Setter Property="Width"  Value="28" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush"     Value="Transparent" />
        <Setter Property="Padding"         Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="{TemplateBinding Background}"
                                 Width="24" Height="24"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                        <Ellipse x:Name="SelectionRing"
                                 Width="28" Height="28"
                                 Stroke="{StaticResource DarkGrayBrush}"
                                 StrokeThickness="2"
                                 Fill="Transparent"
                                 Opacity="0" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="SelectionRing" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SelectionRing" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         BASE BUTTON STYLE — dark background, white text, hover fade
    ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Background"       Value="{StaticResource DarkGrayBrush}" />
        <Setter Property="Foreground"       Value="{StaticResource WhiteBrush}" />
        <Setter Property="BorderThickness"  Value="0" />
        <Setter Property="Cursor"           Value="Hand" />
        <Setter Property="FontFamily"       Value="{StaticResource AppFontFamily}" />
        <Setter Property="FontSize"         Value="{StaticResource BodyFontSize}" />
        <Setter Property="Height"           Value="{StaticResource ButtonHeight}" />
        <Setter Property="Padding"          Value="{StaticResource ButtonPadding}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource CornerRadiusMedium}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.85" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1.0" Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Opacity" Value="0.7" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Opacity" Value="0.4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost/text button (transparent background) -->
    <Style x:Key="GhostButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background"  Value="Transparent" />
        <Setter Property="Foreground"  Value="{StaticResource DarkGrayBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource CornerRadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#0F000000" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#1A000000" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         SCROLL VIEWER STYLE — hides bars, allows scroll
    ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="HiddenScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter Property="VerticalScrollBarVisibility"   Value="Hidden" />
        <Setter Property="CanContentScroll"              Value="False" />
        <Setter Property="PanningMode"                   Value="VerticalOnly" />
    </Style>

    <Style x:Key="HiddenHScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter Property="VerticalScrollBarVisibility"   Value="Disabled" />
        <Setter Property="CanContentScroll"              Value="False" />
        <Setter Property="PanningMode"                   Value="HorizontalOnly" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         TREE-VIEW ITEM STYLE (indentation + expand/collapse)
         We use a flat ItemsControl, so this is a supplemental style
         for any TreeView fallback.
    ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="ArcmarkTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
        <Setter Property="Padding"    Value="0" />
        <Setter Property="Margin"     Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TreeViewItem">
                    <StackPanel>
                        <Border x:Name="RowBorder"
                                Background="Transparent"
                                Height="44"
                                Padding="{Binding Indentation}">
                            <ContentPresenter ContentSource="Header"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ItemsPresenter x:Name="ItemsHost" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RowBorder" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#0F000000" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         TEXT BOX STYLE (for search / rename)
    ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="CleanTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background"      Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding"         Value="0" />
        <Setter Property="FontFamily"      Value="{StaticResource AppFontFamily}" />
        <Setter Property="FontSize"        Value="{StaticResource BodyFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="0"
                                      VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
